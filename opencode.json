{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen2.5-coder": {
          "name": "qwen2.5-coder"
        }
      }
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--init",
        "--pull=always",
        "--network={env:DOCKER_NETWORK}",
        "-v", "./tmp/playwright-output:/tmp/playwright-output",
        "mcr.microsoft.com/playwright/mcp"
      ]
    }
  }
}
